{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "lib": ["dom", "esnext"],
        // "types": ["node"],
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "./types",
        "outDir": "./dist",
        // "emitDeclarationOnly": true,
        // "typeRoots": ["./node_modules/@types", "./types"],
        "baseUrl": "src",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        // "tsconfig.json",
        // "rollup.config.mjs"
    ]
}

